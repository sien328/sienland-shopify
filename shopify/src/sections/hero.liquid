{% schema %}
{
    "name": "Hero",
    "settings": [
        {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Image Desktop"
        },
        {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Image Mobile"
        },
        {
            "type": "color",
            "id": "color_1",
            "label": "Color 1",
            "default": "#FFFFFF"
        },
        {
            "type": "select",
            "id": "text_align",
            "label": "Text Alignment",
            "options": [
                {
                    "value": "align-left",
                    "label": "Left"
                },
                {
                    "value": "align-center",
                    "label": "Center"
                },
                {
                    "value": "align-right",
                    "label": "Right"
                }
            ],
            "default": "align-center",
            "info": "Desktop Only"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "info": "Required"
        },
        {
            "type": "textarea",
            "id": "copy",
            "label": "Copy"
        },
        {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
        },
        {
            "id": "cta_url",
            "type": "url",
            "label": "CTA URL"
        }
    ],

    "presets": [
        {
            "name": "Homepage Hero",
            "category": "Homepage",
            "settings": {

            }
        }
    ]
}
{% endschema %}

{% if section.settings.title != blank%}

<section class="hero-banner">
    <div class="image-wrapper">
        <picture>
            <source srcset="{{section.settings.image_mobile | img_url: '1024x' }}" media="(max-width: 767px)">
            <source srcset="{{section.settings.image_desktop | img_url: '1500x' }}">
            <img srcset="{{section.settings.image_desktop | img_url: '1500x' }}" alt="{{section.settings.image_desktop.alt}}">
        </picture>
    </div>
    <div class="content-wrapper {{section.settings.text_align}}">
        <h2 class="section-title"
            style="color:{{section.settings.color_1}};"
        >
            {{section.settings.title}}
        </h2>

        {% if section.settings.copy != blank %}
        <p class="section-copy"
           style="color:{{section.settings.color_1}};"
        >{{section.settings.copy}}</p>
        {% endif %}

        {% if section.settings.cta_text != blank and section.settings.cta_url != blank%}
        <a class="cta"
           href="{{section.settings.cta_url}}"
        >
            {{section.settings.cta_text}}
            </a>
        {% endif %}
    </div>
</section>
{% endif %}